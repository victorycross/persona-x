{
  "name": "persona-x",
  "version": "0.1.0",
  "description": "Structured AI persona creation, validation, and panel runtime",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "persona-x": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli/index.ts",
    "create": "tsx src/cli/index.ts create",
    "refine": "tsx src/cli/index.ts refine",
    "validate": "tsx src/cli/index.ts validate",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src/ tests/",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "persona",
    "ai",
    "panel",
    "orchestration",
    "structured-personas",
    "llm"
  ],
  "author": "Brightpath Technologies",
  "license": "UNLICENSED",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "inquirer": "^9.3.0",
    "yaml": "^2.6.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.4.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
